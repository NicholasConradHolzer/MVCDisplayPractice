


<div >
    <h3>Edit</h3>
    <form>
        <div>
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
        <span>({{post.post_url}})</span>
</div>
<div>
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{post.content}}" class="form-input" />
</div>
<div>
    {{post.vote_count}}
    {{ format_plurals 'vote' post.vote_count}}
    since:
    {{format_date post.created_at}}
    <a href="/post/{{post.id}}">{{post.comments.length}}
    {{format_plurals 'comment' post.comments.length}}</a>
</div>

        <button type="submit" class="edit-post-button">Update</button>
        <button type="button" class="delete-post-btn">Delete</button>
    </form>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
